#update
  = simple_form_for [@project, @comment] do |f|
    = f.input :text, :label => "Post an update", :input_html => {  :rows => 2, :cols => 40, :class => "grid_13"}, :required => false
    .clear
    %span.hint.grid_11 How is the project going?
    = f.input :link, :label => false, :input_html => {  :class => ["grid_13","flip"]}, :required => false
    .clear
    %span.hint.grid_11 What about attaching a link to your post?
    = f.button :submit, "Post", :class => "button right"
