#top
  %span.push_1.project_label User
  %h1.push_1.grid_20= @user.name
#leftcolumn.push_1.grid_15
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = f.input :email, :input_html => {:class => "flip"}, :required => false
    = f.input :username, :input_html => {:class => "flip"}, :required => false
    = f.input :name, :input_html => {:class => "flip"}, :required => false
    = f.input :password, :hint => "leave blank if you don't want to change it", :input_html => {:class => "flip"}, :required => false
    = f.input :password_confirmation, :input_html => {:class => "flip"}
    .clear
    = f.input :current_password, :hint => "we need your current password to confirm your changes", :input_html => {:class => "flip"}
    = f.button :submit, "Update", :class => "button", :style => "margin-top:10px"
  %h3 API Token
  :textile
    You can use this token to access the Splendid Bacon JSON API. Keep this just as safe as your password. You can view the developer documentation at: "developer.splendidbacon.com":https://developer.splendidbacon.com
  %label{:for => "token"} API Token
  %input#token.flip.grid_15{:type => :text, :value => @user.authentication_token, :readonly => "readonly"}
  = link_to "Reset authentication token", reset_authentication_token_users_path, :class => "button"
  %h3 Unhappy?
  %br/
  = link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?", :method => :delete, :class => "button" }
